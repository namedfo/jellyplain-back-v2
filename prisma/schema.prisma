model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  cusId String

  role Roles @default(default)

  comments Comment[]
  orders   Order[]

  address Address[]

  phone_number Int?

  bdate      String?
  first_name String?
  last_name  String?
  avatar_url String? @db.VarChar(1000)

  @@unique([cusId])
}

model Address {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  result String? @db.VarChar(250)

  surname String
  name    String
  middle  String

  country String
  city    String
  region  String

  street      String
  home_street String
  home_number Int

  postal_code Int

  orders Order[]

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  yookassa Yookassa?

  productsOrder ProductOrder[]

  totalPrice Int
  trackCode  String? @db.VarChar(200)

  comments Comment[]

  delivery Delivery @default(pochtaru)

  address   Address? @relation(fields: [addressId], references: [id])
  addressId Int?

  status Status?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Yookassa {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  yookassaId String? @unique

  paid Boolean?

  payment_method String?

  account_id String?
  gateway_id String?

  order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?   @unique
}

model ProductOrder {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  size String?

  color  Color?
  images String[]

  price Int?

  count Int?

  order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?

  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  text String @db.VarChar(1000)

  user   User @relation(fields: [userId], references: [id])
  userId Int

  order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category    Categories
  subcategory SubCategory?

  type  Type
  brand Brand

  productsOrder ProductOrder[]

  productChilds ProductChild[]

  title String
  price Int
}

model ProductChild {
  id Int @id @default(autoincrement())

  images Image[]

  sizesClothes  SizesClothes[]
  sizesSneakers SizesSneakers[]

  color Color?

  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Image {
  id Int @id @default(autoincrement())

  url String @db.Text

  productChild   ProductChild? @relation(fields: [productChildId], references: [id])
  productChildId Int?
}

